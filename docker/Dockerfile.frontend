FROM node:20-bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends curl && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY frontend/package.json ./
RUN npm install

COPY frontend/ .

# Use existing node user instead of creating new one
USER node

EXPOSE 3000

CMD ["npm", "run", "dev"]
